{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error","unix"],
        "quotes": ["error", "single"],
        "semi": ["error","always"],
        "no-console": "off",
        "comma-dangle": ["error", "never"],
        "max-len": [0, 120, 2],
        "treatUndefinedAsUnspecified": true
    }
}
